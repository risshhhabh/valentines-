        #container {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        #content {
            text-align: center;
        }

        #yesButton, #noButton {
            padding: 10px 20px;
            font-size: 18px;
            cursor: pointer;
            border: none;
            margin: 10px;
            border-radius: 5px;
            outline: none;
            display: none;
        }

        #yesButton.active, #noButton.active {
            display: block;
        }

        #yesButton {
            background-color: #4caf50;
            color: white;
        }

        #noButton {
            background-color: #e74c3c;
            color: white;
            transition: transform 0.5s ease;
        }

        #partyPoppers {
            display: none;
            animation: party 4s ease-out;
        }

        @keyframes party {
            0%, 100% {
                transform: translateY(0);
            }
            50% {
                transform: translateY(-10px);
            }
        }

        .popup {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            z-index: 2;
            animation: fadeIn 4s forwards;
        }

        @keyframes fadeIn {
            0%, 50%, 100% {
                opacity: 0;
            }
            25%, 75% {
                opacity: 1;
            }
        }

        #waitingText {
            display: none;
            font-size: 18px;
